[init]
	defaultBranch = "main"
[core]
	editor = "$EDITOR"
	fsmonitor = true ; Run daemon to monitor file changes to speed up git status command 
	untrackedcache = true
; [remote.origin]
; 	fetch = "+refs/heads/*:refs/remotes/origin/*"
[alias]
	sro = config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*' ; Set remote.origin for new worktree
	; Use -L :<fn-name>:/path/to/file for changes done on specific functions
	fb = blame -w -C -C -C ; File blame w/ ignored whitespace, detect lines moved or copied, the commit that created the file or any commit at all
	st = status -s
	sta = status
	udn = commit --amend --date=now --no-edit
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[fetch]
	writeCommitGraph = true ; For large repositories
[maintenance]
	auto = false
	strategy = incremental
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	forceWithLease = true
[rebase]
	updateRefs = true
[merge]
	tool = windsurf
[mergetool "windsurf"]
	; Comment: Original way before three-way merge shown commented out
	;    cmd = windsurf --wait $MERGED
	; Comment: For "Three-way merge"
	cmd = windsurf --wait --merge $REMOTE $LOCAL $BASE $MERGED
[diff]
	tool = windsurf
[difftool "windsurf"]
	cmd = windsurf --wait --diff $LOCAL $REMOTE
